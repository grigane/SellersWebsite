@model IEnumerable<SellersWebsite.Models.ProductModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="">Your Product List</h2>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:auto">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Available amount
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Expiry date
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="20%">@product.ProductName</td>
                        <td width="10%">@product.AvailableAmount</td>
                        <td width="10%">@product.Price</td>
                        <td width="15%">@product.ExpiryDate</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="List" asp-action="Update" asp-route-Id="@product.Id" class="btn btn-primary mx-2">Update</a>
                                <a asp-controller="List" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>
