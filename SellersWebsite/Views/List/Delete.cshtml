@model SellersWebsite.Models.ProductModel

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-danger pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col">
                        <label asp-for="AvailableAmount"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col">
                        <label asp-for="ExpiryDate"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="ProductName" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="AvailableAmount" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="ExpiryDate" class="form-control" />
                    </div>
                </div>
                <br>
                <br>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete">
                        </div>
                        <div class="col">
                            <a asp-controller="List" asp-action="Index" class="btn btn-info w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
