@model SellersWebsite.Models.ProductModel

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add new products</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="ProductName"></label>
                    </div>
                    <div class="col">
                        <label asp-for="AvailableAmount"></label>
                    </div>
                    <div class="col">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col">
                        <label asp-for="ExpiryDate"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="ProductName" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="AvailableAmount" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="col">
                        <input asp-for="ExpiryDate" class="form-control" />
                    </div>
                </div>
                <br>
                <br>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Add">
                        </div>
                        <div class="col">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
